<html>
    <head>
        <title>University</title>
    </head>
    <body>
        <h1>Courses</h1>
<!-- DISPLAY AREA -->
        {% if courses is not empty %}
            <h3>List of current courses:</h3>
            <ul>
                {% for course in courses %}
                    <li><a href="/course/{{ course.getId }}">{{ course.getName }}</a> --- {{ course.getCourseNumber }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <h3>You currently don't have any courses listed! Use the form below to add a course.</h3>
        {% endif %}
<!-- END DISPLAY AREA -->
<!-- START ADD STUDENT FORM -->
        <form action="/add_course" method="post">
            <label for="name">Course Name:</label>
            <input type="text" name="name" required>

            <label for="course_number">Course Number:</label>
            <input type="text" name="course_number" required>

            <button type="submit">Add Course</button>
        </form>
<!-- END ADD STUDENT FORM -->
        <form action="/delete_all_courses" method="post">
            <button type="submit">Delete ALL Courses</button>
        </form>
<!-- NAVIGATION -->
        {% include 'footer.html' %}

    </body>
</html>
